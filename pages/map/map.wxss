/* pages/map/map.wxss */
.page {
  width: 100vw;
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

/*Leaderboard Popup  */

  .comment-item{
    position: fixed;
    top: 10vh;
    height: 5vh;
    width: 80vw;
    display: flex;
    align-items: center;
    margin: 0 auto;
    z-index: 1;
    border: 5rpx solid black;
  }

  .comment-avatar{
  border-radius: 50%;
  height: 60rpx;
  width: 60rpx;
  background-color: var(--highlight);
  position: absolute;
} 

.comment-head {
  position: absolute;
  left: 10vw;
  font-size: 24rpx;
  width: 80vw;
  z-index: 1;
}

.comment-body {
  background-color: white;
  min-height: 5vh;
  /* padding: 15rpx 10rpx 5rpx 10rpx; */
  width: 80vw;
  font-size: 24rpx;
  /* margin-left: 25rpx; */
  border-radius: 5rpx;
  box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.2);
  position: relative;
}

.avatar-box{
  border: 1px solid white;
  background-color: lightgrey;
  border-radius: 50%;
  height: 4vh;
  width: 4vh;
  margin: -5rpx;
  position: absolute;
  left: 10px;
  z-index: 1;
}
.arrow-icon-leaderboard{
  height: 3vh;
  width: 3vw;
   padding: 10rpx;   
  background-color: white;
}

/*driver stats  */

.driver-stats-div{
  position: fixed;
  padding-top: 8vh;
  height: 40vh;
  width: 100vw;
  top: 0vh; 
  background-color: lightgrey;
}

.progress-bar{
  position: absolute;
  left: 30vw;
  top: 18vh;
  width: 40vw;
  height: 40vw;
   border: 1px solid black; 
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
   justify-content: center; 
  text-align: center;
}
