/* pages/leaderboard/leaderboard.wxss */
.container {
  min-height: 100vh;
  height: 100%;
  width: 100vw;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0rpx;
  box-sizing: border-box;
  background-color: var(--offwhite);
}  

.banner {
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items:  center;
  background: var(--peach-grad);
  width: 100vw;
  height: 410rpx;
  margin: 0rpx 0rpx 10rpx 0rpx;
  padding: 15rpx;
  box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.2);
}

.banner-head {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 90vw;
  height: 290rpx;
  border-radius: 10rpx;
}

.names {
  font-weight: 400;
  font-size: 28rpx;
  color: black;
  margin:10rpx;
  margin-bottom: 15rpx;
}

.avatars {
  display: inline-flex;
  align-items: center;
}

.avatar-banner {
  border: 1px solid white;
  background-color: lightgrey;
  border-radius: 50%;
  height: 120rpx;
  width: 120rpx;
  margin: -5rpx;
 }

.actions-box {
  display: inline-flex;
  flex-direction: row;
  justify-content: space-around;
  font-size: 10pt;
  margin-top: 10rpx;
  
}

.comments-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0rpx 30rpx 0rpx;
  padding-top: 10rpx;
  width: 100%;
}

.comment-item {
  display:flex;
  flex-direction: column;
  align-items: center;
}
.comment-avatar{
  border-radius: 50%;
  height: 80rpx;
  width: 80rpx;
  background-color: var(--highlight);
  position: relative;
  left: -310rpx;
  top: 60rpx;
} 

.comment-head {
  font-size: 24rpx;
  padding-left: 170rpx;
  width: 90vw;
}



.comment-body {
  background-color: white;
  min-height: 75rpx;
  padding: 15rpx 10rpx 5rpx 10rpx;
  width: 90vw;
  font-size: 24rpx;
  margin-left: 25rpx;
  border-radius: 5rpx;
  box-shadow: 0px 1px 5px rgba(0, 0, 0, 0.2);
  position: relative;
}

.avatar-box{
  border: 1px solid white;
  background-color: lightgrey;
  border-radius: 50%;
  height: 60rpx;
  width: 60rpx;
  margin: -5rpx;
  position: absolute;
  left: 10px;
  z-index: 1;
}



