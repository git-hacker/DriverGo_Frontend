/* pages/pay/pay.wxss */
.page{
   background: linear-gradient(to right, rgb(0, 104, 102),  rgb(58, 166, 144));
   height: 100vh;
   width: 100vw;
}

.back-icon{
  position: absolute;
  padding: 30rpx;
  top: 3vh;
  left: 1vh;
  height: 4vw;
  width: 4vw;
  z-index: 1;
}

.pay-div{
  position: absolute;
  top: 25vh;
  height:100vw;
  width: 80vw;
  background: white;
  border: 1rpx solid rgb(169, 169, 169);
  border-radius: 10rpx;
}

.goods-image{
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
  position: absolute;
  top: 20rpx;
  width: 30vw;
  height:20vw;
}

.points-div{
  /* display: flex; */
  align-items: center;
  margin-left: 5%;
  width: 90%;
  height: 9vh;
  /* width: 40vw; */
  /* justify-content: space-between; */
  border-bottom: 3rpx solid lightgrey;
}

.points-title{
  font-size: 37rpx;
  font-weight: bold;
  margin-left: 200rpx;
  margin-top: 50rpx;
}

.points{
  letter-spacing: -1rpx;
  margin-top: 10rpx;
  font-size: 37rpx;
  font-weight: bold;
  margin-left: 200rpx; 
  color: rgb(80, 205, 171);
}

.qr{
  position: absolute;
  bottom: 2vw;
  padding-left: 2vw;
  padding-top: 2vw;
  width: 75vw;
  height: 75vw;
}